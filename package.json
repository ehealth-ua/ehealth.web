{
  "private": true,
  "dependencies": {
    "lerna": "^2.8.0",
    "yawn-yaml": "^1.3.4"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "prettier": "^1.10.2",
    "pretty-quick": "^1.4.1"
  },
  "scripts": {
    "prepare": "lerna bootstrap",
    "start": "lerna run start --parallel",
    "test": "lerna run test",
    "publish": "lerna publish",
    "precommit": "pretty-quick --staged",
    "postversion": "npm run build-images -- --test && npm run push-images",
    "build-images": "lerna exec -- node \\$LERNA_ROOT_PATH/scripts/buildImage.js",
    "test-images": "lerna exec -- node \\$LERNA_ROOT_PATH/scripts/testImage.js",
    "push-images": "lerna exec -- node \\$LERNA_ROOT_PATH/scripts/pushImage.js",
    "update-chart": "lerna exec --concurrency 1 -- node \\$LERNA_ROOT_PATH/scripts/updateChart.js",
    "deploy-chart": "node scripts/deployChart.js"
  }
}
