{
  "private": true,
  "dependencies": {
    "@ehealth/admin": "file:packages/admin",
    "@ehealth/auth": "file:packages/auth",
    "@ehealth/gatekeeper": "file:packages/gatekeeper",
    "@ehealth/polyfill": "file:packages/polyfill",
    "@ehealth/iit-digital-signature": "file:packages/iit-digital-signature",
    "@ehealth/iit-proxy": "file:packages/iit-proxy",
    "@ehealth/patient-account": "file:packages/patient-account",
    "lerna": "3.0.0-beta.21",
    "npm-package-filter": "^0.1.2"
  },
  "devDependencies": {
    "@ehealth/test-preset": "file:packages/test-preset",
    "flow-bin": "^0.76.0",
    "husky": "^0.14.3",
    "jest": "^23.4.1",
    "prettier": "^1.10.2",
    "pretty-quick": "^1.4.1",
    "react-test-renderer": "^16.4.1",
    "yawn-yaml": "^1.3.4"
  },
  "scripts": {
    "start": "lerna run start --parallel",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest --config jest.config.unit.js",
    "test:e2e": "jest --config jest.config.e2e.js",
    "publish": "lerna publish",
    "precommit": "pretty-quick --staged",
    "postversion": "npm run build-images -- --test && npm run push-images",
    "build-images": "lerna exec --since origin/HEAD -- node \\$LERNA_ROOT_PATH/scripts/buildImage.js",
    "test-images": "lerna exec --since origin/HEAD -- node \\$LERNA_ROOT_PATH/scripts/testImage.js",
    "push-images": "lerna exec --since origin/HEAD -- node \\$LERNA_ROOT_PATH/scripts/pushImage.js",
    "update-chart": "lerna exec --concurrency 1 -- node \\$LERNA_ROOT_PATH/scripts/updateChart.js",
    "deploy-chart": "node scripts/deployChart.js"
  },
  "workspaces": [
    "packages/*"
  ]
}
